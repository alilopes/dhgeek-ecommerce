        <main>
            <hero class="hero">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a href="http://localhost:3333/produtos/classicos">
                            <img class="d-block w-100 hero-img" src="/images/banners/classic/castelo.png" alt="Disney Classic">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="http://localhost:3333/produtos/princesas">
                            <img class="d-block w-100 hero-img" src="/images/banners/princess/princesas.png" alt="Princesas">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="http://localhost:3333/produtos/starwars">
                            <img class="d-block w-100 hero-img" src="/images/banners/starwars/starwars.png" alt="Star Wars">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="http://localhost:3333/produtos/marvel ">
                            <img class="d-block w-100 hero-img" src="/images/banners/marvel/marvel.png" alt="Marvel">
                        </a>
                    </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            </hero>
            <section id="star-wars">
                <div class="products__banner">
                    <div class="products__banner__title">
                        <h2>StarWars</h2>
                        <div class="products__banner__buttons">
                            <a href="#"><img src="/images/icons/ver-mais-produtos.svg" alt="ver-mais-produtos"></a>
                            <a href="/produtos/starwars" class="products__banner__buttons--see-more">Veja
                                mais produtos
                                <span>
                                    StarWars
                                </span>
                            </a>
                            <a href="#"><img src="/images/icons/ir-para-topo.svg" alt="ir-para-topo"></a>
                            <a href="#" class="products__banner__buttons--go-top">Ir para o topo</a>
                        </div>
                    </div>
                    <img class="products__banner__img"
                        src="/images/banners/starwars/banner-starwars-image1-darthVader.jpg"
                        alt="Anúncio da nova linha de produtos da marca StarWars" />
                </div>
                <div class="products__card">
                    <div>
                        <a href="#" id="back-button"><img src="/images/icons/left-arrow.svg" alt="back-button"></a>
                        <a href="#" id="next-button"><img src="/images/icons/right-arrow.svg" alt="next-button"></a>
                    </div>

                    <div class="products__card__area">
                        <% for (let product of productData) { %>
                            <% if(product.category==="StarWars" ) { %>
                                <div class="products__card-geral">
                                <div class="products__card__item"
                                    onclick="location.href='/produtos/<%= product.id %>/<%= product.slug %>'"
                                    style="cursor: pointer;">
                                    <img class="products__card__img"
                                    src="upload\<%= product.productImages[0].path %>"
                                    alt="<%= product.name %>" />
                                    <div class="products__card__info">
                                        <a href="#">
                                            <%= product.name %>
                                        </a>
                                        <% for (let productPrice of product.productPromotions) { %>
                                            <p><span id="real">R$</span>
                                                <%= productPrice.promotionalPrice %>
                                            </p>
                                            <span>
                                                <%= productPrice.paymentsConditions %>x de R$ <%=
                                                        productPrice.paymentsValues %>
                                            </span>
                                            <% } %>
                                            
                                    </div>
                                </div>
                                <% if (user.typeId == 1) { %>
                                    <div class="button-admin"
                                    onclick="location.href='/produtos/dashboard/updateProduct/<%= product.id %>'">
                                        <a href="#"><img src="/images/icons/admin-edit_icon.svg" alt="edit"></a>
                                    </div>
                                <% } %>
                                </div>
                                <% } %>
                                    <% } %>
                    </div>

                </div>
            </section>

